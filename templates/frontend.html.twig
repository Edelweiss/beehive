        <script type="text/javascript">
          var quicksearch = function(){
              var url = window.location.href.includes('/dev') ? '/dev/' : '/';
              var id = $('#quicksearch_id').val();
              var valid = true;

              if(id.match(/^\d+$/)){
                url += 'tm';
              } else if (id.match(/^\d+[a-z]+$/)){
                url += 'hgv';
              } else if (id.match(/^.+;.*;.+$/)){
                url += 'ddb';
              } else if (id.match(/^.+;.+;?$/)){
                url += 'volume';
              } else if (id.match(/^[IVXLCDM]+$/)){
                id = ['', 'I', 'II', 'III', 'IV', 'V', 'VI', 'VII', 'VIII', 'IX', 'X', 'XI', 'XII', 'XIII', 'XIV', 'XV', 'XVI', 'XVII', 'XVIII', 'XIX', 'XX'].indexOf(id);
                if(id && id > 0){
                  url += 'bl';
                } else {
                  valid = false;
                }
              } else {
                valid = false;
              }
              if(valid){
                url += '/' + id;
                window.location.href = url;
              } else {
                alert('Id oder Bandnummer eingeben, z.¬†B. XIII (f√ºr BL XIII), 34844 (f√ºr TM/HGV), p.mil;2;64 oder p.mil;1; (f√ºr DDB-Hybrid/Band).');
              }
          };

          $(document).ready(function(){
           $('#quicksearch_button').click(quicksearch);
           $('#quicksearch_id').on('keypress', function(event){
             if(event.which == 13){
               quicksearch();
             }
           });
